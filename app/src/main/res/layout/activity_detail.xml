<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Toolbar sebagai header -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/purple_500"
        android:titleTextColor="@android:color/white"
        android:title="Detail PC"
        android:elevation="8dp" />

    <!-- Konten detail PC di bawah toolbar -->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- LinearLayout untuk membungkus konten -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Gambar PC -->
            <ImageView
                android:id="@+id/img_pc"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitCenter"
                android:src="@drawable/sample_pc"
                android:elevation="4dp"
                android:background="@drawable/rounded_background"
                android:layout_marginBottom="16dp" />

            <!-- Judul PC -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="PC Gaming Pro"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <!-- Harga -->
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Rp.23.000.000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/purple_500" />

            <!-- Spesifikasi PC -->
            <TextView
                android:id="@+id/tv_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Spesifikasi lengkap PC"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:textColor="@android:color/black" />

            <!-- Tombol Aksi -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/btn_add_to_cart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="16dp"
                    android:background="@drawable/rounded_button"
                    android:text="Masukan Keranjang"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btn_buy_now"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="16dp"
                    android:background="@drawable/rounded_button"
                    android:text="Beli Sekarang"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:layout_marginStart="8dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
